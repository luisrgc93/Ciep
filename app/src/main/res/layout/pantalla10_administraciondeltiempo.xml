<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="20"
        android:background="#ffffffff">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView3"
            android:layout_weight="2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="20"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnóstico\n"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:paddingTop="15dp" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagen1_pantalla10_administraciondeltiempo"
                    />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:id="@+id/imagen2_pantalla10_administraciondeltiempo" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="20">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="9.5">

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="1.- Test 'Administración del tiempo'(n.d.).En EducaPlay"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:textSize="12dp" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="http://www.educaplay.com/es/recursoseducativos/928792/administracion_del_tiempo"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:password="false"
                            android:textSize="12dp"
                            android:autoLink="web" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="\n2.- Valois, D. (2013). Test '¿te organizas bien?
      Es maseficaz.com"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:textSize="12dp" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="http://www.maseficaz.com/TEST-Como-te-organizas.html"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:password="false"
                            android:textSize="12dp"
                            android:autoLink="web" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="\n3.- Test 'gestión del tiempo (29 de marzo de 2011). En consultorio de cuaching"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:textSize="12dp" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="http://coaching-bitacorach.blogspot.mx/2011/03/test-sobre-gestion-del-tiempo.html     "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:password="false"
                            android:textSize="12dp"
                            android:autoLink="web" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="\n4.- Test de 'evaluación periódica' (2 de abril de 2012). En optimizatiempo.com"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:textSize="12dp" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="http://www.optimizatiempo.com/2012/04/test-de-evaluacion-periodica.html"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textIsSelectable="true"
                            android:id="@+id/textView4"
                            android:password="false"
                            android:textSize="12dp"
                            android:autoLink="web" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="\n¡Atrévete a conocer tus áreas de oportunidade! Ojalá hayas realizado al menos dos de los test propuestos.\n\n¡LA CLAVE DEL ÉXITO EN TUS OBJETIVOS Y METAS DEPENDERÁ DE QUÉ TAN SERIA SEA LA ADMINISTRACIÓN DE TU TIEMPO"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold"
                            android:textIsSelectable="true"
                            android:gravity="center"
                            android:id="@+id/textView4"
                            android:textSize="12dp" />
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="150dp"
                            android:id="@+id/imagen3_pantalla10_administraciondeltiempo"/>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="9.5"></LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="18"
            android:weightSum="20"
            android:background="#fd7417">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="9.5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="10" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/anterior_pantalla10_administraciondeltiempo"
                    android:onClick="onClick">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/boton_anterior_administraciondeltiempo"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:onClick="onClick"
                    android:id="@+id/siguiente_pantalla10_administraciondeltiempo">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/boton_siguiente_administraciondeltiempo"
                        android:longClickable="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="9.5" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>