<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:weightSum="10"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:weightSum="8">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/spinner"
            android:layout_weight="1" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/codigoreg"
            android:hint="Codigo"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:textColorHint="#ff137684"
            android:textColor="#ff137684" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombrereg"
            android:hint="Nombre"
            android:layout_weight="1"
            android:textColorHint="#ff137684"
            android:textColor="#ff137684" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/centroreg"
            android:hint="Centro"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:textColorHint="#ff137684"
            android:textColor="#ff137684" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/carrerareg"
            android:hint="Carrera"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:textColorHint="#ff137684"
            android:textColor="#ff137684" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/usuarioreg"
            android:hint="Usuario"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:textColorHint="#ff137684"
            android:textColor="#ff137684" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Contrase単a"
            android:id="@+id/contrase単areg"
            android:layout_weight="1"
            android:textColorHint="#ff137684"
            android:textColor="#ff137684" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Repita Contrase単a"
            android:id="@+id/contrase単areg2"
            android:layout_weight="1"
            android:textColorHint="#ff137684"
            android:textColor="#ff137684" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:weightSum="10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.5"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4.75" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:weightSum="10">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Registrar"
                    android:onClick="onClick"
                    android:id="@+id/registrar"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2.75"
                    android:textColor="#ffffffff"
                    android:background="#ff19a7be" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.5"></LinearLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Cancelar"
                    android:onClick="onClick"
                    android:id="@+id/cancelar"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2.75"
                    android:background="#ff19a7be"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4.75" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.5"></LinearLayout>

    </LinearLayout>

</LinearLayout>